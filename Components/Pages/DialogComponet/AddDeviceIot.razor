@page "/add-device-iot"
@using GlomensioApp.Model
@using GlomensioApp.Services
@using MudBlazor
@inject ISnackbar Snackbar
@inject IDeviceIotService DeviceIotService;
@inject NavigationManager Navigation
<MudSnackbarProvider />
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h5">         
                Create Device
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="device.MacId" Label="MacID" Variant="Variant.Text"> </MudTextField>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="AddDevice">Add Device</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }

    private DeviceIot device = new DeviceIot();

  
    private async Task AddDevice()
    {
        try
        {
           var isSuccess = await DeviceIotService.AddDeviceToUserAsync(device);
            if (isSuccess)
            {
                Snackbar.Add("Device created successfully", Severity.Success);
                Navigation.NavigateTo("/home");
            }
            else
            {
                Snackbar.Add("Device ID does not exist on the system", Severity.Error);
                Navigation.NavigateTo("/home");
            }
        }
        catch (Exception ex)
        {
        }
    }


    private void Cancel() => MudDialog.Cancel();

}


